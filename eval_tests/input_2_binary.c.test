#include <stdio.h>
#include <fcntl.h>
#include "libft.h"

char	*str_to_bin(char *str)
{
	char *binary;
	int	i;
	int	place;
	
	binary = ft_memalloc(18);
	i = 0;
	place = 17;
	binary[18] = '\0';
	
	while (str[i] == '.')
		i++;
	while (str[i] != '\0')
	{
		if (str[i] == '#')
			binary[place] = '1';
		else
		{
			if (str[i] == '.')
				binary[place] = '0';
			else
				place++;
		}
		place--;
		i++;
	}
	while (place >= 0)
	{
		binary[place] = '0';
		place--;
	}
	return (binary);
}


int main(void)
{
	int ret;
	char buf[22];
	int fd;
	char *binary;
	int i = 0;

	binary = NULL;
	fd = open("t_shapes.txt", O_RDONLY);
	ret = read(fd, buf, 21);
	while (ret > 0)
	{
		i++;
		printf("\n%d\n", i);
		buf[ret] = '\0';
		printf("The shape is\n%s\n", buf);
		binary = str_to_bin(buf);
		printf("The binary is \n%s\n\n", binary);
		free(binary);
		ret = read(fd, buf, 21);
	}
	close(fd);
	return (0);
}